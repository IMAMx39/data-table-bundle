{% trans_default_domain 'KreyuDataTable' %}

{% block data_table_text %}
    <span>{{- value -}}</span>
{% endblock %}

{% block data_table_number %}
    <div class="text-end">
        <span>{{- value -}}</span>
    </div>
{% endblock %}

{% block data_table_boolean %}
    {% if value %}
        <span class="badge bg-green">{{ label_true|trans }}</span>
    {% else %}
        <span class="badge bg-red">{{ label_false|trans }}</span>
    {% endif %}
{% endblock %}

{% block data_table_link %}
    <a href="{{ url }}">
        <span>{{- value -}}</span>
    </a>
{% endblock %}

{% block data_table_collection %}
    {% for _value in value %}
        {{- data_table_column_value(data_table, prototype, _value) -}}
    {% endfor %}
{% endblock %}

{% block data_table_template %}
    {{ include(template_path, template_vars) }}
{% endblock %}

{% block data_table_actions %}
    {% for action in actions %}
        {{ include(action.template_path, action.template_vars) }}
    {% endfor %}
{% endblock %}